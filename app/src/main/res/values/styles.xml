<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="TitleBar" parent="TextInfo">
        <item name="android:fontFamily">@font/markot_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>
    
    <style name="BigTextInfo" parent="TitleBar">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallTextInfo" parent="TextInfo">
        <item name="android:fontFamily">@font/markot_light</item>
        <item name="android:textColor">@color/lightRed</item>
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabBackground">@color/grey</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabIndicator">@drawable/selector_tab</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicatorColor">@color/darkBlue</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ButtonRedBackgroundWhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_45dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/darkRed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/markot_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
